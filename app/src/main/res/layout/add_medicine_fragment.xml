<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.add_medicine.AddMedicineFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/work_sans"
        android:text="Choose medicine:"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp">


    </TextView>


    <GridLayout
        android:id="@+id/medicines_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="10"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Vitamin B6"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            app:icon="@drawable/ic_pill" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Vitamin B6"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            app:icon="@drawable/ic_pill" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Vitamin D3"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            app:icon="@drawable/ic_pill" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Vitamin D3"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            app:icon="@drawable/ic_pill" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Vitamin D3"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            app:icon="@drawable/ic_pill" />


        >
    </GridLayout>


    <TextView
        android:id="@+id/select_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/work_sans"
        android:text="Define date:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/medicines_list"
        tools:layout_editor_absoluteX="16dp">


    </TextView>

    <EditText
        android:id="@+id/editText_define_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorAccent"
        android:textAlignment="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/select_date_textview">

    </EditText>

    <TextView
        android:id="@+id/textview_define_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/work_sans"
        android:text="Define time:"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/editText_define_date"
        tools:layout_editor_absoluteX="16dp">

    </TextView>

    <EditText
        android:id="@+id/editText_define_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorAccent"
        android:textAlignment="center"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/textview_define_time">

    </EditText>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_push_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_check"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>